{
  "name": "aero-work",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "./scripts/bundle-agent.sh && tauri build",
    "server": "cd src-tauri && cargo run --bin aero-server --features websocket",
    "server:build": "cd src-tauri && cargo build --release --bin aero-server --features websocket",
    "headless": "concurrently -n web,ws -c blue,green \"bun run dev\" \"bun run server\"",
    "headless:build": "bun run build && bun run server:build",
    "bundle:agent": "./scripts/bundle-agent.sh"
  },
